<%= simple_form_for(@serial, :html => { :multipart => true }) do |f| %>
  <%= f.error_notification %>


  <% unless @serial.new_record? %>
    
  <% end %>
  
  
  <div class="form-inputs">
    <%= f.input :tag_list, :label => "Tags (separated by spaces)" %>
    <%= f.label :cover %><br />
    <%= f.file_field :cover %>    
    <%= f.input :episode %>
    <%= f.input :director %>
    <%= f.input :name %>
    <%= f.input :year %>
    <%= f.input :length %>
  </div>
 <div class="control-group string optional">
    
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
