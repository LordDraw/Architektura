<%- model_class = Fortune -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nazwa) %>:</strong></dt>
  <dd><%= @fortune.nazwa %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ilosc) %>:</strong></dt>
  <dd><%= @fortune.ilosc %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cena) %>:</strong></dt>
  <dd><%= @fortune.cena %></dd>
  <dt><strong><%= model_class.human_attribute_name(:opis) %>:</strong></dt>
  <dd><%= @fortune.opis %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              fortunes_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_fortune_path(@fortune), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              fortune_path(@fortune),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
